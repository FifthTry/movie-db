padding-bottom: 10
align: center


-- button.button: Add Movie
role: primary
large: true
align: center
$on-click$: message-host $add-movie-api

-- object add-movie-api:
function: http
method: post
url: add-movie
title: $input_title
release_date: $input_release_date
director: $input_director
poster: $input_poster
description: $input_description
