-- ftd.row A:
caption title:
string placeText: Default
boolean movie:
boolean release_date:
boolean director:
boolean poster:
boolean description:

/--- ftd.boolean: $movie

--- ftd.text: $title

--- ftd.input:
placeholder: $placeText
if: $movie
$on-input$: $input_title=$VALUE

--- ftd.input:
placeholder: $placeText
if: $release_date
$on-input$: $input_release_date=$VALUE

--- ftd.input:
placeholder: $placeText
if: $director
$on-input$: $input_director=$VALUE

--- ftd.input:
placeholder: $placeText
if: $poster
$on-input$: $input_poster=$VALUE

--- ftd.input:
placeholder: $placeText
if: $description
$on-input$: $input_description=$VALUE

-- ftd.column foo:
optional caption name:
optional string label:
min-width: percent 50
margin-bottom: $fpm.space.space-8
margin-top: $fpm.space.space-8
padding-vertical: $fpm.space.space-4
width: percent 100
height: 560
align: left

--- A: $obj.name
$loop$: $fields as $obj
movie: $obj.movie
release_date: $obj.release_date
director: $obj.director
poster: $obj.poster
description: $obj.description


/-- foo: $obj.name
$loop$: $fields as $obj

-- foo:







